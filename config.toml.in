# NÃ¸ughty Linux Configuration

[boot]
# GRUB boot menu configuration
grub_theme = true  # Enable Catppuccin GRUB theme
grub_timeout = 5   # Boot menu timeout in seconds

[browser]
brave = false
firefox = true
chromium = false
google-chrome = false
microsoft-edge = false
vivaldi = false

[catppuccin]
accent = "mauve"
flavor = "mocha"
gtk = false
qt = false

[desktop]
# Enable greetd display manager (defaults to true)
display-manager = true
# One of alacritty, foot, kitty
terminal-emulator = "kitty"
# Additional desktop packages to install via home-manager
packages = []

[fonts]
configure = false

[terminal]
# Your preferred shell (bash, fish or zsh)
shell = "fish"
# Additional terminal packages to install via home-manager
packages = [ "rates" ]

[ubuntu]

# Ubuntu features to remove/disable
[ubuntu.remove]
apport = false              # Remove crash reporting
kdump-tools = false         # Remove kernel crash dump tools
pollinate = true            # Remove entropy seeding
snapd = false               # Remove Snap package manager
unattended-upgrades = false # Remove automatic updates
