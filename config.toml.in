# Noughty Linux Configuration

[system]
hostname = "@@HOSTNAME@@"

[user]
name = "@@USER@@"

[desktop]
# One of alacritty, foot, kitty
terminal-emulator = "kitty"

[catppuccin]
accent = "blue"
flavor = "mocha"
gtk = false
qt = false

[fonts]
configure = false

[terminal]
# Your preferred shell (bash, fish or zsh)
shell = "fish"

[ubuntu]

# Ubuntu features to remove/disable
[ubuntu.remove]
snapd = false               # Remove Snap package manager
apport = false              # Remove crash reporting
pollinate = true            # Remove entropy seeding
unattended-upgrades = false # Remove automatic updates
